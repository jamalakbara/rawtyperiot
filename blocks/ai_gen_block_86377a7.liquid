{% doc %}
  @prompt
    make 2 image left and right clickable, without white space, full width, make little bit white space, give white space for top and bottom also
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-split-images-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    margin: 0;
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px 0;
  }

  .ai-split-images-container-{{ ai_gen_id }} {
    display: flex;
    width: 100%;
    margin: 0;
    padding: 0;
    gap: {{ block.settings.gap }}px;
  }

  .ai-split-images-item-{{ ai_gen_id }} {
    flex: 1;
    margin: 0;
    padding: 0;
    position: relative;
    overflow: hidden;
  }

  .ai-split-images-link-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    height: 100%;
    position: relative;
    text-decoration: none;
  }

  .ai-split-images-img-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    aspect-ratio: {{ block.settings.aspect_ratio }};
  }

  .ai-split-images-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    aspect-ratio: {{ block.settings.aspect_ratio }};
    position: relative;
  }

  .ai-split-images-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-split-images-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-split-images-container-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_layout }};
    }
  }
{% endstyle %}

<split-images-{{ ai_gen_id }} class="ai-split-images-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-split-images-container-{{ ai_gen_id }}">
    <div class="ai-split-images-item-{{ ai_gen_id }}">
      {% if block.settings.link_left != blank %}
        <a href="{{ block.settings.link_left }}" class="ai-split-images-link-{{ ai_gen_id }}">
      {% else %}
        <div class="ai-split-images-link-{{ ai_gen_id }}">
      {% endif %}
        {% if block.settings.image_left %}
          <img
            src="{{ block.settings.image_left | image_url: width: 2000 }}"
            alt="{{ block.settings.image_left.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image_left.width }}"
            height="{{ block.settings.image_left.height }}"
            class="ai-split-images-img-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-split-images-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-split-images-empty-state-{{ ai_gen_id }}">
              Add left image
            </div>
          </div>
        {% endif %}
      {% if block.settings.link_left != blank %}
        </a>
      {% else %}
        </div>
      {% endif %}
    </div>

    <div class="ai-split-images-item-{{ ai_gen_id }}">
      {% if block.settings.link_right != blank %}
        <a href="{{ block.settings.link_right }}" class="ai-split-images-link-{{ ai_gen_id }}">
      {% else %}
        <div class="ai-split-images-link-{{ ai_gen_id }}">
      {% endif %}
        {% if block.settings.image_right %}
          <img
            src="{{ block.settings.image_right | image_url: width: 2000 }}"
            alt="{{ block.settings.image_right.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image_right.width }}"
            height="{{ block.settings.image_right.height }}"
            class="ai-split-images-img-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-split-images-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-split-images-empty-state-{{ ai_gen_id }}">
              Add right image
            </div>
          </div>
        {% endif %}
      {% if block.settings.link_right != blank %}
        </a>
      {% else %}
        </div>
      {% endif %}
    </div>
  </div>
</split-images-{{ ai_gen_id }}>

<script>
  (function() {
    class SplitImages{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }
    customElements.define('split-images-{{ ai_gen_id }}', SplitImages{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Split images",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Left image"
    },
    {
      "type": "image_picker",
      "id": "image_left",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "link_left",
      "label": "Link"
    },
    {
      "type": "header",
      "content": "Right image"
    },
    {
      "type": "image_picker",
      "id": "image_right",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "link_right",
      "label": "Link"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Space between images",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "default": 8
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top spacing",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom spacing",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 36
    },
    {
      "type": "select",
      "id": "aspect_ratio",
      "label": "Aspect ratio",
      "options": [
        {
          "value": "1 / 1",
          "label": "Square (1:1)"
        },
        {
          "value": "4 / 3",
          "label": "Landscape (4:3)"
        },
        {
          "value": "16 / 9",
          "label": "Widescreen (16:9)"
        },
        {
          "value": "3 / 4",
          "label": "Portrait (3:4)"
        },
        {
          "value": "2 / 3",
          "label": "Tall (2:3)"
        }
      ],
      "default": "4 / 3"
    },
    {
      "type": "select",
      "id": "mobile_layout",
      "label": "Mobile layout",
      "options": [
        {
          "value": "row",
          "label": "Side by side"
        },
        {
          "value": "column",
          "label": "Stacked"
        }
      ],
      "default": "column"
    }
  ],
  "presets": [
    {
      "name": "Split images"
    }
  ]
}
{% endschema %}